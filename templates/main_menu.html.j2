<h1>DevOps Solutions Map</h1>

<nav>
    <a href="{{ url_for('main') }}">Home</a>
    {% if request.args['open'] and request.args['open'] == 'all' %}
    <a href="{{ url_for('main') }}">Close all Boxes</a>
    {% else %}
    <a href="{{ url_for('main', open='all') }}">Open all Boxes</a>
    {% endif %}
    <a href="{{ url_for('about') }}">About</a>
    {% if not config['FREEZER_MODE'] %}
    <form action="{{ url_for('search_view') }}" method="POST">
        <input type="text" name="query" placeholder="Search a use case or a tool" />
        <input type="hidden" name="csrf_token" value="{{ csrf_token() }}"/>
        <input type="submit" value="Search" />
    </form>
    {% endif %}
</nav>